{
    "git": {
        "commitMessage": "chore(release): v${version}",
        "tagName": "v${version}",
        "push": true
    },
    "github": {
        "release": true,
        "tokenRef": "GITHUB_TOKEN",
        "assets": [
            "app/build/outputs/apk/release/klyx-release-v${version}.apk"
        ]
    },
    "npm": false,
    "hooks": {
        "before:init": ["./gradlew assembleRelease"]
    },
    "plugins": {
        "@release-it/conventional-changelog": {
            "preset": {
                "name": "conventionalcommits",
                "types": [
                    {
                        "type": "feat",
                        "section": "Features"
                    },
                    {
                        "type": "fix",
                        "section": "Bug Fixes"
                    },
                    {}
                ]
            }
        }
    }
}
